\renewcommand\headrulewidth{0pt}
\fancypagestyle{HeadFootStyleOne}{
    \fancyhead[L]{{\color{HeadTitleColor}\textsc{\@title}}}
    \fancyhead[R]{{\color{HeadTitleColor}\textsc{LyDeX}}}
    \fancyhead[R]{
        \begin{tikzpicture}[overlay,remember picture]
            \draw[HeadRuleColor,line width=.8pt]
            ([xshift=1in+\hoffset+\oddsidemargin,
              yshift=-1in-\voffset-\topmargin-\headheight]
            current page.north west) -- ++(\textwidth,0);
        \end{tikzpicture}
    }
    \fancyfoot[L]{\vskip-4mm
        \HeadFootIcon{\faChalkboardTeacher} M. A. SOUKTANI \hskip3mm
        \HeadFootIcon{\faEnvelope} \texttt{souktanim@gmail.com}}
    \fancyfoot[R]{
        \begin{tikzpicture}[overlay,remember picture]
            \node[text=FootPageNumberFg,fill=FootPageNumberBg,font=\bfseries,above left]
                (page number) at
                ([xshift=1in+\hoffset+\oddsidemargin+\textwidth,
                  yshift=-1in-\voffset-\topmargin-\headheight-\headsep-\textheight-
                  \footskip] current page.north west) {\thepage};
            \draw[FootRuleColor,line width=.8pt]
                (page number.north east) -- ++(-\textwidth,0);
        \end{tikzpicture}
    }

    \renewcommand{\headrulewidth}{0pt}
    \renewcommand{\footrulewidth}{0pt}
}

