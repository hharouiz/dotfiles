% Using TikZ
\newcommand{\NoteBox}[3][black]{
  \begin{tikzpicture}[trim left]
    \matrix
    [matrix of nodes,anchor=text,inner xsep=2mm,
     nodes={text width=\textwidth-4mm,anchor=center,align=flush left},
     row 1/.style={nodes={fill=black!10,font=\bfseries,text=#1}},
     row 2/.style={nodes={fill=black!5}},
    ] (m)
    {
      #2 \\
      #3 \\
    };
    % Bounding Box = Node Dimensions
  \end{tikzpicture}
}

\newtcolorbox{Remarque}[1][]{%
  colback=black!5,colbacktitle=black!10,coltitle=blue,title=Remarque,
  fonttitle=\bfseries,boxrule=0.3pt,sharp corners,
  #1
}
